#include <LittleFS.h>

void createFile(String path, String content)
{
  File file = LittleFS.open(path, "w");
  if (!file)
  {
    Serial.println("Không thể mở file để ghi.");
    return;
  }

  file.print(content); // Ghi nội dung vào file
  file.close();        // Đóng file sau khi ghi xong
}

